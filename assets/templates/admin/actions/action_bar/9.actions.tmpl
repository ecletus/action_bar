{{$context := .}}
{{with .Result}}
  {{ if .CurrentUser }}
    <div class="qor-actionbar__right">
      <div class="qor-actionbar__info">
        <span>{{tt ".action.logged_as" .CurrentUser "Logged in as {{.DisplayName}}"}}</span>
        <a href="{{.Auth.LogoutURL $context}}">{{t ".action.logout" "LOGOUT"}}</a>
      </div>

      {{if .Actions}}
        <div class="qor-actionbar__menu">
          <label for="qor-actionbar__menu-checkbox">
            <i class="material-icons">more_vert</i>
            <ul style="display:none;">
              {{ range $action := .Actions }}
                <li>{{$action.ToHTML $context}}</li>
              {{ end }}
            </ul>
          </label>
        </div>
      {{ end }}
    </div>
  {{ else }}
    <a class="qor-actionbar__login" href="{{.Auth.LoginURL $context}}">{{t ".action.login" "LOGIN"}}</a>
  {{ end }}
{{end}}
